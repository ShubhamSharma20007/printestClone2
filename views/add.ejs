<% include  ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-white">Create a new post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block my-2 w-2/4" type="file" name="postimage" id="">
            <input class="block my-2 w-2/4 p-1 text-black" type="text" name="title" id="" placeholder="title">
            <input class="block my-2 w-2/4 p-1 text-black" type="text" name="des" id="" placeholder="description">
            <input value="Create Post" class="block my-2 w-2/4 text-white bg-red-600 p-1" type="submit">
        </form>


    </div>

    <% include ./partials/footer.ejs %>